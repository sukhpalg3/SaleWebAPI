@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="text-center mb-3">
    <button class="btn btn-primary" data-toggle="modal" data-target="#saleForm">Open Sale Entry Form</button>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Sale Date</th>
            <th>Sale Person</th>
            <th colspan="2" align="center">Operations</th>
        </tr>
    </thead>
    <tbody id="saleData">
        <tr>
            <td colspan="6" align="center">No Sale Details</td>
        </tr>
    </tbody>
</table>

<div class="modal fade" tabindex="-1" role="dialog" id="saleForm">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sale Form</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="productname">Product Name: </label>
                        <select class="form-control" id="productname">
                            <option value="Choclate">Choclate</option>
                            <option value="Bread">Bread</option>
                            <option value="Butter">Butter</option>
                            <option value="Jam">Jam</option>
                            <option value="Sweets">Sweets</option>
                        </select>
                        <input type="hidden" class="form-control" id="saleid">
                    </div>
                    <div class="form-group">
                        <label for="quantity">Quantity Sold: </label>
                        <input type="number" class="form-control" id="quantity">
                    </div>
                    <div class="form-group">
                        <label for="saledate">Sale Date: </label>
                        <input type="date" class="form-control" id="saledate"/>
                    </div>
                    <div class="form-group">
                        <label for="person">Sale Person: </label>
                        <select class="form-control" id="person">
                            <option value="John">John</option>
                            <option value="Williams">Williams</option>
                            <option value="Andy">Andy</option>
                            <option value="Rubin">Rubin</option>
                        </select>
                    </div>
                    <div class="form-group" id="result">

                    </div>
                    <button type="button" id="btn" onclick="saveDetails()" class="btn btn-primary">Save Sale Details</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            loadSales();
        });
    </script>
}